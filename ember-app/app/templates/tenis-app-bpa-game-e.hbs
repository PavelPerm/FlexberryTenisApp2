<h3 class="ui header">{{t 'forms.tenis-app-bpa-game-e.caption'}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=model.errors}}
    </div>
  </div>
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button type="submit" class="ui button save-button" {{action 'save'}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button type="submit" class="ui button save-del-button" {{action 'delete'}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button type="submit" class="ui button close-button" {{action 'close'}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field">
  {{
    flexberry-field
    placeholder=(t 'components.flexberry-field.placeholder')
    readonly=readonly
    required=true
    value=model.order
    class=(if model.errors.order 'error' '')
    label=(t 'forms.tenis-app-bpa-game-e.order-caption')
  }}
  {{flexberry-validationmessage error=model.errors.order pointing="pointing"}}
</div>

<div class="field">
  {{
    flexberry-field
    placeholder=(t 'components.flexberry-field.placeholder')
    readonly=readonly
    required=true
    value=model.scoreP1
    class=(if model.errors.scoreP1 'error' '')
    label=(t 'forms.tenis-app-bpa-game-e.scoreP1-caption')
  }}
  {{flexberry-validationmessage error=model.errors.scoreP1 pointing="pointing"}}
</div>

<div class="field">
  {{
    flexberry-field
    placeholder=(t 'components.flexberry-field.placeholder')
    readonly=readonly
    required=true
    value=model.scoreP2
    class=(if model.errors.scoreP2 'error' '')
    label=(t 'forms.tenis-app-bpa-game-e.scoreP2-caption')
  }}
  {{flexberry-validationmessage error=model.errors.scoreP2 pointing="pointing"}}
</div>

</form>
